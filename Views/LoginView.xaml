<?xml version="1.0" encoding="utf-8" ?>
<ContentPage
    x:Class="NYC.MobileApp.Views.LoginView"
    xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
    xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
    xmlns:local="clr-namespace:NYC.MobileApp.Controls"
    xmlns:vm="clr-namespace:NYC.MobileApp.ViewModel"
    Title="Login">
    <ScrollView>
        <VerticalStackLayout Padding="18,82" Spacing="10">
            <StackLayout Margin="0,50,0,0" Spacing="40">
                <Image
                    Aspect="AspectFit"
                    HeightRequest="240"
                    Source="logo"
                    WidthRequest="165" />

                <StackLayout Spacing="0">
                    <Label
                        FontSize="14"
                        HorizontalOptions="Start"
                        Text="Email"
                        TextColor="#929292"
                        VerticalOptions="Center" />
                    <Border
                        Grid.Column="1"
                        Background="White"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1"
						HeightRequest="43"
                        Stroke="Gray"
						>
                        <local:BorderlessEntry
                            FontSize="18"
                            TextColor="Black"
                            BackgroundColor="Transparent"
                            Placeholder="Enter Email"
                            Text="{Binding Email}" />
                    </Border>
                </StackLayout>
                <StackLayout Margin="0" Spacing="0">
                    <Label
                        FontSize="14"
                        HorizontalOptions="Start"
                        Text="Password"
                        TextColor="#929292"
                        VerticalOptions="Center" />
                    <Border
                        Grid.Column="1"
                        Background="White"
                        StrokeShape="RoundRectangle 8"
                        StrokeThickness="1"
						HeightRequest="43"
                        Stroke="Gray"
						>
                        <local:BorderlessEntry
                            FontSize="18"
                            IsPassword="True"
                            TextColor="Black"
                            BackgroundColor="Transparent"
                            Placeholder="Enter Password"
                            Text="{Binding Password}" />
                    </Border>
                </StackLayout>

            </StackLayout>
            
            <Button
                Padding="16"
                Background="{DynamicResource Primary}"
                Command="{Binding LoginCommand}"
                CornerRadius="4"
                Text="SIGN IN"
                TextColor="{DynamicResource White}" />
            <Label
                FontSize="16"
                HorizontalOptions="StartAndExpand"
                Text="{Binding ErrorMessage}"
                TextColor="Red" />
            

            <Button
                Command="{Binding ForgotPasswordCommand}"
                FontSize="14"
                HorizontalOptions="EndAndExpand"
                Text="Forgot Password?"
                TextColor="{DynamicResource Black}" />

        </VerticalStackLayout>
    </ScrollView>
</ContentPage>